#VRML V2.0 utf8
#polygon mesh example: a pyramid

Background {skyColor 0.25 0.25 0.25}

Shape {
  appearance Appearance {
    material Material {diffuseColor 1 0.43 0.71}
  }
  geometry IndexedFaceSet {
    coord Coordinate {
      point [                           # define the 8 points
        0 0 0,
		0.3 0.3 0,
		0.6 0.3 0,
		1 0 0,
		0 -1 0,
		-1 0 0,
		-0.6 0.3 0,
		-0.3 0.3 0

      ]
    }
    coordIndex [                        
    	0,7,6,5,4,3,2,1, -1
    ]
  }
}